@model HrPuSystem.Models.LeaveRecord

@{
    ViewData["Title"] = "Edit Leave Record";
}

<div class="d-flex flex-column gap-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-1">Edit Leave Record</h1>
            <p class="text-secondary mb-0">Update leave request details</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-4">
                    <div class="text-center">
                        <div class="avatar-circle bg-primary bg-opacity-10 text-primary mx-auto mb-3">
                            @Model.Employee.FullName.Substring(0, 1).ToUpper()
                        </div>
                        <h4 class="h5 mb-1">@Model.Employee.FullName</h4>
                        <p class="text-secondary mb-3">@Model.Employee.Email</p>
                        <div class="d-flex justify-content-center gap-2">
                            <span class="badge bg-info-subtle text-info rounded-pill">
                                <i class="bi bi-calendar2-week me-1"></i>@Model.LeaveType.Name
                            </span>
                            @if (Model.Approved)
                            {
                                <span class="badge bg-success-subtle text-success rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i>Approved
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning-subtle text-warning rounded-pill">
                                    <i class="bi bi-clock me-1"></i>Pending
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">Leave Request Details</h5>
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" style="display: none;">
                        </div>
                        <input type="hidden" asp-for="LeaveRecordId" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EmployeeId" class="form-label">Employee</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-person text-secondary"></i>
                                        </span>
                                        <select asp-for="EmployeeId" class="form-select border-start-0 ps-0"
                                            asp-items="ViewBag.EmployeeId">
                                        </select>
                                    </div>
                                    <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LeaveTypeId" class="form-label">Leave Type</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-calendar2-week text-secondary"></i>
                                        </span>
                                        <select asp-for="LeaveTypeId" class="form-select border-start-0 ps-0"
                                            asp-items="ViewBag.LeaveTypeId">
                                        </select>
                                    </div>
                                    <span asp-validation-for="LeaveTypeId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="form-label">Start Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-calendar3 text-secondary"></i>
                                        </span>
                                        <input asp-for="StartDate" class="form-control border-start-0 ps-0"
                                            type="date" />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="form-label">End Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-calendar3 text-secondary"></i>
                                        </span>
                                        <input asp-for="EndDate" class="form-control border-start-0 ps-0" type="date" />
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2 me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        font-size: 1.75rem;
    }

    .input-group-text {
        padding-right: 0.5rem;
    }

    .input-group-text i {
        font-size: 1.1rem;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: none;
    }

    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        border-radius: 0.375rem;
    }

    .input-group:focus-within .input-group-text,
    .input-group:focus-within .form-control,
    .input-group:focus-within .form-select {
        border-color: #86b7fe;
    }

    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
        margin-top: 0.25em;
    }

    .form-switch .form-check-input:checked {
        background-color: var(--bs-success);
        border-color: var(--bs-success);
    }

    .badge {
        font-weight: 500;
        padding: 0.5rem 0.75rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Show validation summary if there are errors
        $(document).ready(function () {
            if ($('.validation-summary-errors').length > 0) {
                $('.alert.alert-danger').show();
            }
        });
    </script>
}
