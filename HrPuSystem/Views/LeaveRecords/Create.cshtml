@model HrPuSystem.Models.LeaveRecord

@{
    ViewData["Title"] = "Create Leave Record";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary fw-bold">📝 Create Leave Record</h2>
        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label fw-semibold">👨‍💼 Select Employee</label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                        <option value="">-- Select Employee --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="LeaveTypeId" class="form-label fw-semibold">📋 Select Leave Type</label>
                    <select asp-for="LeaveTypeId" class="form-select" asp-items="ViewBag.LeaveTypeId">
                        <option value="">-- Select Leave Type --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label fw-semibold">📅 Start Date</label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label fw-semibold">📅 End Date</label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Approved" id="approvedCheckbox">
                    <label class="form-check-label fw-semibold" for="approvedCheckbox">
                        ✅ Approved
                    </label>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success d-flex align-items-center me-2">
                        <i class="bi bi-check-circle me-2"></i> Create Leave Record
                    </button>

                    <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
