@model HrPuSystem.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary fw-bold">✏️ Edit Employee</h2>
        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                <input type="hidden" asp-for="EmployeeId" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold">🆔 Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name..." />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">📧 Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter email..." />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfHire" class="form-label fw-semibold">📅 Date of Hire</label>
                    <input asp-for="DateOfHire" class="form-control" type="date" />
                    <span asp-validation-for="DateOfHire" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success d-flex align-items-center me-2">
                        <i class="bi bi-check-circle me-2"></i> Save Changes
                    </button>

                    <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
