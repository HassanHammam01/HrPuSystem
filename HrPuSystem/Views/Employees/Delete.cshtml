@model HrPuSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="d-flex flex-column gap-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-1">Delete Employee</h1>
            <p class="text-secondary mb-0">Remove employee from the system</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-4">
                    <div class="text-center">
                        <div class="avatar-circle bg-danger bg-opacity-10 text-danger mx-auto mb-3">
                            @Model.FullName.Substring(0, 1).ToUpper()
                        </div>
                        <h4 class="h5 mb-1">@Model.FullName</h4>
                        <p class="text-secondary mb-3">@Model.Email</p>
                        <div class="d-flex justify-content-center gap-2">
                            <span class="badge bg-primary-subtle text-primary rounded-pill">
                                <i class="bi bi-calendar-check me-1"></i>
                                Joined @Model.DateOfHire.ToString("MMM yyyy")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-body p-4">
                    <div class="alert alert-danger d-flex align-items-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            <strong>Warning:</strong> This action cannot be undone. All data associated with this
                            employee will be permanently deleted.
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label text-secondary">Full Name</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person text-danger me-2"></i>
                                    <span class="fw-medium">@Model.FullName</span>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-secondary">Email Address</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope text-danger me-2"></i>
                                    <span class="fw-medium">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label text-secondary">Date of Hire</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar text-danger me-2"></i>
                                    <span class="fw-medium">@Model.DateOfHire.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-secondary">Leave Balance</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar2-check text-danger me-2"></i>
                                    <span class="fw-medium">@Model.AnnualLeaveBalance days</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="EmployeeId" />
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Permanently
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        font-size: 1.75rem;
    }

    .badge {
        font-weight: 500;
        padding: 0.5rem 0.75rem;
    }

    .alert {
        border: none;
        border-radius: 0.5rem;
    }

    .alert i {
        font-size: 1.25rem;
    }
</style>
