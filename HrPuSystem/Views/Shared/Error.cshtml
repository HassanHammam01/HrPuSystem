@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page p-5 rounded shadow-sm bg-body-tertiary">
                <div class="mb-4">
                    <i class="bi bi-exclamation-circle text-danger" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-4 text-danger mb-4">Oops!</h1>
                
                @if (!string.IsNullOrEmpty(Model.ExceptionMessage))
                {
                    @if (Model.IsApplicationException)
                    {
                        <div class="alert alert-warning mb-4">
                            <h4 class="alert-heading">Notice</h4>
                            <p class="mb-0">@Model.ExceptionMessage</p>
                        </div>
                    }
                    else if (Model.IsDevelopment)
                    {
                        <div class="alert alert-danger mb-4">
                            <h4 class="alert-heading">Error Details</h4>
                            <p class="mb-0">@Model.ExceptionMessage</p>
                        </div>
                    }
                }
                
                @if (string.IsNullOrEmpty(Model.ExceptionMessage) || (!Model.IsApplicationException && !Model.IsDevelopment))
                {
                    <h2 class="h4 text-body-secondary mb-4">An unexpected error has occurred</h2>
                }

                @if (Model.ShowRequestId)
                {
                    <div class="alert alert-info d-inline-block">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </div>
                }

                @if (Context.Request.Headers["X-Forwarded-For"].Any())
                {
                    <div class="alert alert-warning mt-3">
                        <p class="mb-0">We've logged this error and our team will look into it.</p>
                    </div>
                }

                <div class="mt-4">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="bi bi-house me-2"></i> Return to Home
                    </a>
                </div>

                @if (!Model.IsDevelopment)
                {
                    <div class="mt-4 text-body-secondary">
                        <p class="small mb-2">Development Environment</p>
                        <p class="small">
                            For detailed error information, ensure the <strong>Development</strong> environment is enabled 
                            by setting <code>ASPNETCORE_ENVIRONMENT</code> to <strong>Development</strong>.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
