@model HrPuSystem.Models.LeaveType

@{
    ViewData["Title"] = "Delete Leave Type";
}

<div class="d-flex flex-column gap-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-1">Delete Leave Type</h1>
            <p class="text-secondary mb-0">Remove leave type from the system</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-4">
                    <div class="text-center">
                        <div class="avatar-circle bg-danger bg-opacity-10 text-danger mx-auto mb-3">
                            <i class="bi bi-calendar2-week"></i>
                        </div>
                        <h4 class="h5 mb-1">@Model.Name</h4>
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success-subtle text-success rounded-pill">
                                    <i class="bi bi-currency-dollar me-1"></i>Paid Leave
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger-subtle text-danger rounded-pill">
                                    <i class="bi bi-dash-circle me-1"></i>Unpaid Leave
                                </span>
                            }
                            <span class="badge bg-info-subtle text-info rounded-pill">
                                <i class="bi bi-calendar3 me-1"></i>@Model.DefaultDays days
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-body p-4">
                    <div class="alert alert-danger d-flex align-items-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            <strong>Warning:</strong> This action cannot be undone. All data associated with this leave
                            type will be permanently deleted.
                            This may affect existing leave records.
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label text-secondary">Leave Type Name</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-tag text-danger me-2"></i>
                                    <span class="fw-medium">@Model.Name</span>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-secondary">Default Days</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar2-week text-danger me-2"></i>
                                    <span class="fw-medium">@Model.DefaultDays days</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label text-secondary">Payment Status</label>
                                <div class="d-flex align-items-center">
                                    @if (Model.IsPaid)
                                    {
                                        <i class="bi bi-currency-dollar text-danger me-2"></i>
                                        <span class="fw-medium">Paid Leave Type</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-dash-circle text-danger me-2"></i>
                                        <span class="fw-medium">Unpaid Leave Type</span>
                                    }
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-secondary">Identifier</label>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-hash text-danger me-2"></i>
                                    <span class="fw-medium">ID: @Model.LeaveTypeId</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="LeaveTypeId" />
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Permanently
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-circle i {
        font-size: 1.75rem;
    }

    .badge {
        font-weight: 500;
        padding: 0.5rem 0.75rem;
    }

    .alert {
        border: none;
        border-radius: 0.5rem;
    }

    .alert i {
        font-size: 1.25rem;
    }
</style>
