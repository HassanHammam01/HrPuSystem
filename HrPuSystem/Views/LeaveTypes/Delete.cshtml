@model HrPuSystem.Models.LeaveType

@{
    ViewData["Title"] = "Delete Leave Type";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-danger fw-bold">🗑️ Delete Leave Type</h2>
        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <div class="card mt-3 shadow-sm border-danger">
        <div class="card-body">
            <div class="alert alert-warning d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div><strong>Warning:</strong> Are you sure you want to delete this leave type? This action **cannot** be undone.</div>
            </div>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">🏷️ Leave Type Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-semibold">📆 Default Leave Days</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DefaultDays) days</dd>

                <dt class="col-sm-3 fw-semibold">💰 Paid Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsPaid)
                    {
                        <span class="badge bg-success">✅ Paid</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">❌ Unpaid</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-end">
                <input type="hidden" asp-for="LeaveTypeId" />

                <button type="submit" class="btn btn-danger d-flex align-items-center me-2">
                    <i class="bi bi-trash me-2"></i> Delete Permanently
                </button>

                <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
