@model HrPuSystem.Models.LeaveType

@{
    ViewData["Title"] = "Edit Leave Type";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary fw-bold">✏️ Edit Leave Type</h2>
        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                <input type="hidden" asp-for="LeaveTypeId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">🏷️ Leave Type Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter leave type name..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DefaultDays" class="form-label fw-semibold">📆 Default Leave Days</label>
                    <input asp-for="DefaultDays" class="form-control" type="number" placeholder="Enter number of days..." />
                    <span asp-validation-for="DefaultDays" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsPaid" id="isPaidCheckbox">
                    <label class="form-check-label fw-semibold" for="isPaidCheckbox">
                        💰 Paid Leave
                    </label>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success d-flex align-items-center me-2">
                        <i class="bi bi-check-circle me-2"></i> Save Changes
                    </button>

                    <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
